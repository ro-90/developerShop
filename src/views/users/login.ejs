<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head') %>

  <body class="bg-light">
    <%- include('../partials/header') %>
      <main class="container">
        <h2 class="my-4">Iniciar sesión</h2>

        <div class="col-12 col-md-8 col-lg-6 mx-auto">

          <div class="card shadow">
            <div class="card-body">
              <form action="/registerController" method="post" class="row">
                <div class="form-group mb-3">
                  <label for="email" class="form-label">Correo Electrónico:</label>
                  <input type="email" id="email" name="email" class="form-control"  required>
                  <% if(locals.errores && locals.errores.correo) {%>
                    <p class="msg-error"><i class="fa-solid fa-circle-exclamation"></i>
                      <%= errores.correo.msg %>
                    </p>
                    <% } %>
                </div>
                <div class="form-group mb-3">
                  <label for="password" class="form-label">Contraseña:</label>
                  <input type="password" id="password" name="password" class="form-control"  required>
                </div>
                <div class="form-group mb-3">
                    <div class="d-flex flex-column flex-md-row justify-content-around">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="checkDefault">
                        <label class="form-check-label" for="checkDefault">
                          Recordarme
                        </label>
                      </div>
                      <div>
                        <p>¿No estás registrado?  <a href="/users/register">Registrate</a> </p>
                      </div>
                    </div>
                </div>
                <div class="form-group my-3">
                  <button class="btn btn-dark" type="submit">Iniciar sesión</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </main>
      <%- include('../partials/footer') %>
  </body>

</html>